<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/navigationBar"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nav_header_borttom_spacing"
    android:layout_marginTop="33dp"
    android:paddingTop="@dimen/nav_header_top_spacing"
    android:paddingLeft="20sp"
    android:layout_marginLeft="8dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView android:visibility="gone"
        android:id="@+id/imageView"
        android:layout_width="70sp"
        android:layout_height="70sp"
        app:srcCompat="@drawable/logo_icddrb" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/navigationBarTextColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</LinearLayout>
